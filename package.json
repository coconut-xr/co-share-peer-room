{
  "name": "co-share-peer-room",
  "version": "1.0.0",
  "description": "Peer to peer room functionality for co-share-peer",
  "scripts": {
    "build": "tsc",
    "check": "run-s check:prettier check:eslint",
    "check:prettier": "prettier --check src/**/*.{ts,tsx}",
    "check:eslint": "eslint src",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier --write src/**/*.{ts,tsx}",
    "fix:eslint": "eslint src --fix",
    "host": "node ./dist/server"
  },
  "peerDependencies": {
    "co-share": "^3.2.6",
    "co-share-peer": "^1.0.0",
    "co-share-socketio": "^3.2.7"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/simple-peer": "^9.11.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
